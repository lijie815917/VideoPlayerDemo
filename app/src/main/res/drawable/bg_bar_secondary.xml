<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 背景图 -->
	<!-- <item android:id="@+android:id/background" android:drawable="@drawable/seekbar_back" /> -->
	 <!-- 第二进度图  -->
	<!-- <item android:id="@+android:id/secondaryProgress" android:drawable="@drawable/seekbar_wrap" /> -->
	
	<!-- 进度度 -->
	<!-- <item android:id="@+android:id/progress" android:drawable="@color/base_color" /> -->
	 
	<item android:id="@android:id/background">
		<shape >
            <corners android:radius="10dip" />
            <gradient
                android:angle="270"
                android:centerColor="#c8c8c8"
                android:centerY="0.45"
                android:endColor="#c8c8c8"
                android:startColor="#c8c8c8" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
		<clip >
            <shape >
                <corners android:radius="10dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#969696"
                    android:centerY="0.45"
                    android:endColor="#969696"
                    android:startColor="#969696" />
            </shape>
        </clip>
    </item>
    
    <item android:id="@android:id/progress" >
		<clip >
            <shape >
                <corners android:radius="10dip" />
               <gradient
                    android:angle="270"
                    android:centerColor="#c52437"
                    android:centerY="0.45"
                    android:endColor="#c52437"
                    android:startColor="#c52437"
                    />
            </shape>
        </clip>
    </item>
</layer-list>